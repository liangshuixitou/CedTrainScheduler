  "version": "0.2.0",
  "configurations": [
    {
      "name": "Scheduler Simulator",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/example.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Manager",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cedtrainscheduler/runtime/manager/app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--id",
        "manager",
        "--ip",
        "127.0.0.1",
        "--port",
        "5000",
        "--scheduler-name",
        "sjf"
      ]
    },
    {
      "name": "Master",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cedtrainscheduler/runtime/master/app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--id",
        "master-cloud",
        "--ip",
        "127.0.0.1",
        "--port",
        "5001",
        "--manager-id",
        "manager",
        "--manager-ip",
        "127.0.0.1",
        "--manager-port",
        "5000",
        "--cluster-name",
        "master-cloud",
        "--cluster-type",
        "cloud"
      ]
    },
    {
      "name": "Worker",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cedtrainscheduler/runtime/worker/app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--worker-id",
        "cloud-worker-1",
        "--worker-ip",
        "127.0.0.1",
        "--worker-port",
        "5002",
        "--master-id",
        "master-cloud",
        "--master-ip",
        "127.0.0.1",
        "--master-port",
        "5001",
        "--gpu-type",
        "T4"
      ]
    },
    {
      "name": "TaskSubmitClient",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/cedtrainscheduler/runtime/client/task_submit_client.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--id",
        "manager",
        "--ip",
        "36.103.199.200",
        "--port",
        "5000",
        "--csv-path",
        "${workspaceFolder}/cedtrainscheduler/cases/task/case_micro_100_tasks.csv"
      ]
    },
  ],
  "compounds": [
    {
      "name": "Manager + Master + Worker",
      "configurations": [
        "Manager",
        "Master",
        "Worker"
      ]
    },
    {
      "name": "Manager + Master + Worker + TaskSubmitClient",
      "configurations": [
        "Manager",
        "Master",
        "Worker",
        "TaskSubmitClient"
      ]
    }
  ]
}